{
  "extends": "@tsconfig/node16/tsconfig.json",
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "src/**/*.spec.ts"
  ],
  "compilerOptions": {
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "isolatedModules": true,
    "declaration": true,
    "sourceMap": true,
    "module": "commonjs",
    "target": "es2021",
    "strict": true
  }
}
